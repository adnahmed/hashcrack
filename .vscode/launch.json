{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: debug server-side",
      "type": "node-terminal",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "sourceMaps": true,
      "env": {
        "NODE_OPTIONS": "--inspect"
      },
      "command": "npm run dev"
    },
    {
      "name": "Next.js: debug client-side",
      "runtimeExecutable": "edge",
      "type": "msedge",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "full stack",
      "type": "node-terminal",
      "command": "npm run dev",
      "env": {
        "NODE_OPTIONS": "--inspect"
      },
      "request": "launch",
      "outputCapture": "std",
      "cwd": "${workspaceFolder}",
      "sourceMaps": true,
      "serverReadyAction": {
        "pattern": "started server on .+, url: (https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithEdge"
      }
    },
    {
      "name": "attach api",
      "type": "node",
      "request": "attach",
      "port": 9229
    },
    {
      "name": "Launch Storybook",
      "runtimeArgs": [
        "run",
        "story"
      ],
      "runtimeExecutable": "npm",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "type": "node",
      "name": "vscode-jest-tests.v2",
      "request": "launch",
      "args": [
        "run",
        "test",
      ],
      "runtimeExecutable": "npm",
      "console": "internalConsole"
    },
  ],
  "compounds": [
    {
      "name": "Run Dev",
      "configurations": [
        "full stack",
        "attach api"
      ]
    }
  ]
}